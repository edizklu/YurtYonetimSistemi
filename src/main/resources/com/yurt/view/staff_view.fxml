<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.yurt.controller.StaffController"
            prefWidth="900" prefHeight="600">

    <top>
        <HBox style="-fx-background-color: #4CAF50; -fx-padding: 15;">
            <Label fx:id="welcomeLabel" text="Yönetici Paneli" textFill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Çıkış Yap" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">

            <Tab text="İzin Talepleri (Onay Bekleyenler)">
                <VBox spacing="10" style="-fx-padding: 20;">
                    <TableView fx:id="requestsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colReqStudent" text="Öğrenci ID" prefWidth="100"/>
                            <TableColumn fx:id="colReqStart" text="Başlangıç" prefWidth="150"/>
                            <TableColumn fx:id="colReqEnd" text="Bitiş" prefWidth="150"/>
                            <TableColumn fx:id="colReqReason" text="Neden" prefWidth="250"/>
                            <TableColumn fx:id="colReqStatus" text="Durum" prefWidth="100"/>
                        </columns>
                    </TableView>
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Button text="REDDET" onAction="#handleReject" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="ONAYLA" onAction="#handleApprove" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
            </Tab>

            <Tab text="Oda Yönetimi">
                <HBox spacing="20" style="-fx-padding: 20;">
                    <VBox spacing="10" minWidth="250">
                        <Label text="Yeni Oda Ekle" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="roomNumberField" promptText="Oda Numarası (Örn: A-101)"/>
                        <TextField fx:id="capacityField" promptText="Kapasite (Sayı)"/>
                        <TextField fx:id="typeField" promptText="Tip (Standart/Suit)"/>
                        <Button text="Odayı Kaydet" onAction="#handleAddRoom" maxWidth="Infinity" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    </VBox>
                    <TableView fx:id="roomsTable" HBox.hgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colRoomNum" text="Oda No" prefWidth="100"/>
                            <TableColumn fx:id="colCapacity" text="Kapasite" prefWidth="100"/>
                            <TableColumn fx:id="colCount" text="Dolu" prefWidth="100"/>
                            <TableColumn fx:id="colType" text="Tip" prefWidth="150"/>
                        </columns>
                    </TableView>
                </HBox>
            </Tab>

            <Tab text="Öğrenci Listesi">
                <VBox style="-fx-padding: 20;">
                    <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colStName" text="Ad" prefWidth="150"/>
                            <TableColumn fx:id="colStSurname" text="Soyad" prefWidth="150"/>
                            <TableColumn fx:id="colStTc" text="TC No" prefWidth="150"/>
                            <TableColumn fx:id="colStRoom" text="Oda ID" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

        </TabPane>
    </center>
</BorderPane>