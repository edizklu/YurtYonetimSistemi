<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.yurt.controller.StudentController"
            prefWidth="800" prefHeight="600">

    <top>
        <HBox style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label fx:id="welcomeLabel" text="Hoşgeldiniz" textFill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Çıkış Yap" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Profil ve Oda Bilgileri">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <TitledPane text="Kişisel Bilgiler" collapsible="false">
                        <GridPane hgap="10" vgap="10">
                            <Label text="Ad Soyad:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                            <Label fx:id="nameLabel" text="..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="TC Kimlik:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                            <Label fx:id="tcLabel" text="..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Oda Numarası:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                            <Label fx:id="roomLabel" text="..." GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </GridPane>
                    </TitledPane>

                    <TitledPane text="Oda Arkadaşları" collapsible="false" VBox.vgrow="ALWAYS">
                        <ListView fx:id="roommateList"/>
                    </TitledPane>
                </VBox>
            </Tab>

            <Tab text="İzin Talepleri">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <DatePicker fx:id="startDate" promptText="Başlangıç Tarihi"/>
                        <DatePicker fx:id="endDate" promptText="Bitiş Tarihi"/>
                        <TextField fx:id="reasonField" promptText="İzin Nedeni" HBox.hgrow="ALWAYS"/>
                        <Button text="Talep Oluştur" onAction="#handleCreateRequest" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>

                    <Label text="Geçmiş İzin Taleplerim" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <TableView fx:id="permissionsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colStart" text="Başlangıç" prefWidth="150"/>
                            <TableColumn fx:id="colEnd" text="Bitiş" prefWidth="150"/>
                            <TableColumn fx:id="colReason" text="Neden" prefWidth="250"/>
                            <TableColumn fx:id="colStatus" text="Durum" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>